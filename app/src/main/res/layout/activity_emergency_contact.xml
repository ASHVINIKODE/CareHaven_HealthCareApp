<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EmergencyContact">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/emergencyContactLinearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Contacts"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnNearbyHospitals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nearby Hospitals &amp; Clinics"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openHospitalsClinics"/>

            <Button
                android:id="@+id/btnAmbulanceServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ambulance Services"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openAmbulanceService"/>

            <Button
                android:id="@+id/btnSavedContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Emergency Contacts"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openSavedEmergencies"/>

            <Button
                android:id="@+id/btnAddEmergencyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Emergency Contact"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openAddEmergencyContact"/>

            <Button
                android:id="@+id/btnCallEmergencyServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Emergency Services"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openCallEmergencyContact"/>

<!--            <Button-->
<!--                android:id="@+id/buttonNext"-->
<!--                android:layout_width="120dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="end"-->
<!--                android:layout_marginBottom="30dp"-->
<!--                android:backgroundTint="#070707"-->
<!--                android:padding="4dp"-->
<!--                android:text="Back"-->
<!--                android:textColor="@android:color/white"-->
<!--                android:textSize="18sp" />-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>