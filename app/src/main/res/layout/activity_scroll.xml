<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Scroll">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/patientLinearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointments"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openAppointments"/>

            <Button
                android:id="@+id/btnMedicalRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Records"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openMedicalRecord"/>

            <Button
                android:id="@+id/btnTelemedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telemedicine"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openTelemedicine"/>

            <Button
                android:id="@+id/btnMedicationReminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medication Reminders"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openMedicationReminders"/>

            <Button
                android:id="@+id/btnHealthAnalytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Analytics Dashboard"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openHealthAnalytics"/>

            <Button
                android:id="@+id/btnEmergencyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Contact"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openEmergencyContact"/>

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#070707"
                android:padding="4dp"
                android:text="Back"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:onClick="goBack"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>