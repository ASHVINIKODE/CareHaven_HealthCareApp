<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8"
    tools:context=".MedicalRecord">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/medicalRecordsLinearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Records"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnPrescriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prescriptions"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openPrescriptions"/>

            <Button
                android:id="@+id/btnLabReports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab Reports"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openLabReport"/>

            <Button
                android:id="@+id/btnDiagnosisHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnosis History"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openDiagnosisHistory"/>

            <Button
                android:id="@+id/btnViewAllRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View All Records"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openViewAllRecords"/>

            <Button
                android:id="@+id/btnUploadRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Records"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:onClick="openUploadRecords"/>

<!--            <Button-->
<!--                android:id="@+id/buttonNext"-->
<!--                android:layout_width="120dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="end"-->
<!--                android:layout_marginBottom="30dp"-->
<!--                android:backgroundTint="#070707"-->
<!--                android:padding="4dp"-->
<!--                android:text="Back"-->
<!--                android:textColor="@android:color/white"-->
<!--                android:textSize="18sp" />-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>