<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Prescription"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#0B0000"
            android:paddingBottom="20dp"
            android:gravity="center"/>

        <!-- Patient Name -->
        <EditText
            android:id="@+id/editPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Name"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"/>

        <!-- Medicine Details -->
        <EditText
            android:id="@+id/editMedicineDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Name and Details"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:inputType="textMultiLine"/>

        <!-- Dosage -->
        <EditText
            android:id="@+id/editDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosage (e.g., 2 times a day)"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"/>

        <!-- Instructions -->
        <EditText
            android:id="@+id/editInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Special Instructions"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:inputType="textMultiLine"/>

        <!-- Generate Prescription Button -->
        <Button
            android:id="@+id/btnGeneratePrescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Prescription"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>